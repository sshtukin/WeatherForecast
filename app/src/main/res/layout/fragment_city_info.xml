<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".fragments.CityInfoFragment"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCityName"
            tools:text="City name"
            android:textSize="@dimen/city_info_name_textSize"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_margin_standard"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="italic"/>

    <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/city_info_photo_height"
            android:id="@+id/ivCityPhoto"
            android:layout_margin="@dimen/layout_margin_standard"
            android:contentDescription="@string/photo_of_the_city"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvCityInfo"
            android:layout_margin="@dimen/layout_margin_standard"
            android:textSize="@dimen/city_info_textSize"
            android:textColor="#000000"
            tools:text="Some text"/>

</LinearLayout>